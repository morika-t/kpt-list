<div class="row-fluid">
  <div class="span6" id="keep_column">
    <div class="memitem">
      <div class="memproto">
        <div class="memname_todo_h"><center>Keep - 良かったこと・継続したいこと</center></div>
      </div>
      <div class="memdoc_waiting">
        <ul id="todo_l" class="droptrue">
        <% @tasks[:todo_low_tasks].each do |task| %>
          <%= render "tasks/task", {:task => task, :display => "block" } %>
        <% end %>
        </ul>
      </div>
    </div>

    <div class="memitem">
      <div class="memproto">
        <div class="memname_waiting"><center>Problem - うまくいかなかったこと</center></div>
      </div>
      <div class="memdoc_waiting">
        <ul id="waiting" class="droptrue">
        <% @tasks[:waiting_tasks].each do |task| %>
          <%= render "tasks/task", {:task => task, :display => "block" } %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="span4" id="temporarily_column" style="display: none">
    <div class="memitem">
      <div class="memproto">
        <div class="memname_done"><center>Temporarily - 一時置き場</center></div>
      </div>
      <div class="memdoc_waiting">
        <ul id="temporarily" class="droptrue">
        <% @tasks[:temporarily_tasks].each do |task| %>
          <%= render "tasks/task", {:task => task, :display => "block" } %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="span6" id="try_column">
    <div class="memitem">
      <div class="memproto">
        <div class="memname_doing"><center>Try - 挑戦したいこと</center></div>
      </div>
      <div class="memdoc_doing">
        <ul id="doing" class="droptrue">
        <% @tasks[:doing_tasks].each do |task| %>
          <%= render "tasks/task", {:task => task, :display => "block" } %>
        <% end %>
        </ul>
      </div>
    </div>

    <div class="memitem">
      <div class="memproto">
        <div class="memname_happy"><center>Happy - 幸せだったこと・感謝したいこと</center></div>
      </div>
      <div class="memdoc_done">
        <ul id="happy" class="droptrue">
        <% @tasks[:happy_tasks].each do |task| %>
          <%= render "tasks/task", {:task => task, :display => "block" } %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12" style="display:none">
    <div class="memitem">
      <div class="memproto">
        <div class="memname_done"><center>Done - Recent <%= @recent_done_num %> - </center></div>
      </div>
      <div class="memdoc_done">
        <ul id="done" class="droptrue">
        <% @tasks[:done_tasks].each do |task| %>
          <%= render "tasks/task", {:task => task, :display => "block", :done => true } %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

